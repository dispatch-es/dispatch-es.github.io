!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{http_equiv: 'X-UA-Compatible', content: 'IE=edge;chrome=1'}
    %title= "Dispatches - #{current_page.data.title || 'Products'}"
    %meta{name: 'description', content: 'Dispatches is a multi-disciplinary product design practice in New York City.'}
    %meta{name: 'author', content: 'Dispatches'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    :javascript
      window.paceOptions = {
        ghostTime: 1000
      }
    :plain
      <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
      <!--[if lt IE 9]>
          <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->
    = javascript_include_tag 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'all'
    = stylesheet_link_tag '//s3.amazonaws.com/dispatch-es/fonts/font_face.css'
  %body{ class: "#{page_classes}", data: { provider: ENV['PROVIDER_URL'] } }
    = partial 'partials/nav'
  #main{ role: 'main' }
    = yield
    = partial 'partials/footer'

  .border-bottom
  .border-left
  .border-right
  .border-top

  :javascript
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '#{ENV['GOOGLE_ANALYTICS_ID']}', 'auto');
    ga('send', 'pageview');
